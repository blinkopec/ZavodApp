<Page x:Class="ZavodApp.WorkerResources.Pages.PagesForWork.BrakOrNoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZavodApp.WorkerResources.Pages.PagesForWork"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="BrakOrNoPage">

    <Grid>
        <Button Content="Брак" HorizontalAlignment="Left" VerticalAlignment="Center"
                Width="100" Height="65" FontSize="24" FontWeight="Bold" Click="BrakButton_Click"/>
        <Button Content="Не брак" HorizontalAlignment="Right" VerticalAlignment="Center"
                Width="100" Height="65" FontSize="24" FontWeight="Bold" Click="NoButton_Click"/>
    </Grid>
</Page>
