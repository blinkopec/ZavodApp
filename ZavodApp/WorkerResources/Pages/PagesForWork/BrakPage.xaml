<Page x:Class="ZavodApp.WorkerResources.Pages.PagesForWork.BrakPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZavodApp.WorkerResources.Pages.PagesForWork"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="BrakPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox  x:Name="TypeOfBrakBox" Width="200" Grid.Row="0" Height="50"/>
        <Button Content="Сохранить" Width="100" Height="50" HorizontalAlignment="Right" Grid.Row="1" Click="SaveButton_Click"/>
        <Button Content="Отмена" Width="100" Height="50" Grid.Row="1" HorizontalAlignment="Left" Click="CloseButton_Click"/>
    </Grid>
</Page>
